<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softradix.jetpackcomposedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.PostApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposeDemo">
        <activity
            android:name=".navigation.NavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.JetpackComposeDemo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RoomDbActivity"
            android:exported="true"
            android:label="@string/title_activity_room_db"
            android:theme="@style/Theme.JetpackComposeDemo.NoActionBar">

        </activity>
        <activity
            android:name=".ui.BoxConstraintsActivity"
            android:exported="true"
            android:label="@string/title_activity_box_constraints"
            android:theme="@style/Theme.JetpackComposeDemo.NoActionBar"></activity>
        <activity
            android:name=".ui.LauncherActivity"
            android:exported="true"
            android:label="@string/title_activity_list_screen"
            android:theme="@style/Theme.JetpackComposeDemo.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackComposeDemo.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>